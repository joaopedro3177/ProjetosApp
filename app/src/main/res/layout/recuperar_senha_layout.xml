<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RecuperarSenhaActivity">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Recupere sua senha!"
        android:textColor="#2196F3"
        android:textSize="30dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Insira sua nova senha nos campos abaixos"
        android:textSize="16dp"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:endIconMode="password_toggle">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtSenhaRecuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insira sua nova senha"
            android:inputType="numberPassword"


            />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:endIconMode="password_toggle">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtSenhaNovamenteRecuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insira sua nova senha novamente"
            android:inputType="numberPassword"


            />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnEntrarRecuperar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:backgroundTint="#008EFF"
        android:text="Entrar"
        android:textStyle="bold"
        app:cornerRadius="6dp"

        />

    <Button
        android:id="@+id/btnVoltarRecuperar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:backgroundTint="#008EFF"
        android:text="Voltar"
        android:textStyle="bold"
        app:cornerRadius="6dp"

        />

</LinearLayout>